@model IEnumerable<EFCAssets.Models.Currency>

@{
    ViewData["Title"] = "Index";
}


<span>active </span><span style="" class="display-4 text-info">Currencies</span>

<p>
    <a asp-action="Create" class="text-info">Create New</a>
</p>
<table class="table sortable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CurrencyName)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.CurrensyToUSD)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.CurrencyComment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrencyName)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.CurrensyToUSD)
                </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.CurrencyComment)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-info">Edit |</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="text-info">Details |</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-info">Deactivate</a>
                </td>
            </tr>
        }
    </tbody>
</table>
