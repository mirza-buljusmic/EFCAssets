@model EFCAssets.Models.Currency

@{
    ViewData["Title"] = "Delete";
}

<span class="display-4 text-info">Deactivate</span><p></p>

<span>Are you sure you want to deactivate <b>@Model.CurrencyName:</b> @Model.CurrencyComment?</span>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CurrencyName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CurrencyName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CurrensyToUSD)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CurrensyToUSD)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CurrencyComment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CurrencyComment)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deactivate" class="btn btn-danger" /> |
        <a asp-action="Index" class="text-info">Back to List</a>
    </form>
</div>
