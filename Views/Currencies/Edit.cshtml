@model EFCAssets.Models.Currency

@{
    ViewData["Title"] = "Edit";
}

<span class="display-4 text-info">Edit</span><span> currency</span>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CurrencyName" class="control-label"></label>
                <input asp-for="CurrencyName" class="form-control" />
                <span asp-validation-for="CurrencyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrensyToUSD" class="control-label">@ViewData["decimalMessage"]</label>
                <input asp-for="CurrensyToUSD" class="form-control" />
                <span asp-validation-for="CurrensyToUSD" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="CurrencyActive" /> @Html.DisplayNameFor(model => model.CurrencyActive)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CurrencyComment" class="control-label"></label>
                <input asp-for="CurrencyComment" class="form-control" />
                <span asp-validation-for="CurrencyComment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="text-info">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
